generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id        String    @id
  ownerId   String
  position  String
  company   String
  location  String?
  status    JobStatus
  type      JobType
  createdAt DateTime  @default(now())
  updatedAt DateTime
  User      User      @relation(fields: [ownerId], references: [id])
}

model User {
  id        String   @id
  name      String   @db.VarChar(50)
  lastName  String?  @db.VarChar(50)
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(72)
  location  String?  @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime
  Job       Job[]
}

enum JobStatus {
  pending
  interview
  declined
}

enum JobType {
  full_time
  part_time
  remote
  internship
}
